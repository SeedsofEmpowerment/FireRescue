<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="736dp"
    android:layout_height="200dp"
    android:orientation="vertical" xmlns:android1="http://schemas.android.com/apk/res/android"
    android:background ="@drawable/warningbackgroundxlarge">
	
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
    	android:textSize="40dp"
    	android:layout_marginLeft="5dp"
    	android:text="You have already existed this account.Do you want to overwrite it?"
    	android:id="@+id/tv" 
    />
    <RelativeLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        
    >
    <Button
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:text="OK"
        android:id="@+id/okbutton" 
        android:textSize="30dp"
    />
    <Button
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginLeft="360dp"
        android:text="CANCEL"
        android:id="@+id/cancelbutton" 
        android:textSize="30dp"
    />
    </RelativeLayout>
</LinearLayout>