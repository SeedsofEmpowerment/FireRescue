<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="288dp"
    android:layout_height="80dp"
    android:orientation="vertical" xmlns:android1="http://schemas.android.com/apk/res/android"
    android:background ="@drawable/warningbackgroundnormal">
	
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="46dp"
    	android:textSize="16dp"
    	android:layout_marginLeft="5dp"
    	android:text="You have already existed such account. Do you want to overwrite it?"
    	android:id="@+id/tv" 
    />
    <RelativeLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        
    >
    <Button
        android:layout_width="75dp"
        android:layout_height="33dp"
        android:layout_marginLeft="20dp"
        android:text="OK"
        android:id="@+id/okbutton" 
        android:textSize="12dp"
    />
    <Button
        android:layout_width="75dp"
        android:layout_height="33dp"
        android:layout_marginLeft="120dp"
        android:text="Cancel"
        android:id="@+id/cancelbutton" 
        android:textSize="12dp"
    />
    </RelativeLayout>
</LinearLayout>